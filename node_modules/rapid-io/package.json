{
  "name": "rapid-io",
  "version": "0.4.2",
  "description": "JavaScript SDK for Rapid.io to be used both server-side and client-side.",
  "main": "dist/rapid.cjs.js",
  "module": "dist/rapid.es.js",
  "jsnext:main": "dist/rapid.es.js",
  "browser": "dist/rapid.browser.js",
  "umd:main": "dist/rapid.umd.js",
  "scripts": {
    "build": "npm run rollup && npm run rollup:browser",
    "rollup": "rollup -c ./rollup.config.js",
    "rollup:browser": "rollup -c ./rollup.browser.js && rollup -c ./rollup.umd.js",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "prepublish": "npm run lint && npm test && npm run rollup"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "src/*.js": [
      "eslint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "dependencies": {
    "@rapid-io/protocol": "^0.0.72",
    "backo": "^1.1.0",
    "base-64": "^0.1.0",
    "component-emitter": "^1.2.1",
    "debug": "^2.6.8",
    "shortid": "^2.2.8",
    "sort-keys": "^2.0.0",
    "ws": "^3.0.0"
  },
  "devDependencies": {
    "@strv/eslint-config-javascript": "^7.2.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "mock-socket": "^6.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-ignore": "^1.0.3",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1"
  },
  "files": [
    "dist",
    "readme.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rapid-io/rapid-io-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/rapid-io/rapid-io-javascript/issues"
  },
  "keywords": [
    "websocket",
    "realtime",
    "realtime-database"
  ],
  "homepage": "https://www.rapid.io",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/test/integration"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "globals": {
      "DEBUG": "rapid:*"
    }
  }
}
